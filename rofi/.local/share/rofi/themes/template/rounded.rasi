/* ROUNDED THEME FOR ROFI */
/* Author: Newman Sanchez (https://github.com/newmanls) */

* {
    font:   "NotoSans Nerd Font 12";

    background-color:   @gray2alpha;
    text-color:         @fg;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    location:       north;
    y-offset:       calc(50% - 176px);
    width:          480;
    border-radius:  10px;
    border-color:   @gray1;
    border: 2px;
}

mainbox {
    padding:    12px;
}

inputbar {
    background-color:   @orangealpha;
    border-color:       @gray2;

    border:         2px;
    border-radius:  10px;

    padding:    8px 16px;
    spacing:    8px;
    children:   [ prompt, entry ];
}

prompt {
    text-color: @orange;
}

entry {
    placeholder:        "Search...";
    placeholder-color:  @subtext2;
}

message {
    margin:             12px 0 0;
    border-radius:      10px;
    border-color:       @bgalpha;
    background-color:   @bgalpha;
}

textbox {
    padding:    8px 24px;
}

listview {
    background-color:   @gray5alpha;
    border-radius: 10px;

    margin:     12px 0 0;
    lines:      8;
    columns:    1;

    fixed-height: false;
}

element {
    padding:        8px 16px;
    spacing:        8px;
    border-radius:  10px;
}

element normal active {
    text-color: @fg;
}

element alternate active {
    text-color: @fg;
}

element selected normal, element selected active {
    border-color: @orange;
    border: 2px;
}

element-icon {
    size:           1em;
    vertical-align: 0.5;
}

element-text {
    text-color: inherit;
}
